<% include ./partials/head.ejs %>

<main>
	<h1>Login</h1>
	<form method="post">
		<div class="form__inputGroup">
			<label for="login__username">Username</label>
			<input type="text" name="username" id="login__username" placeholder="you@email.com" required>
		</div>
		<div class="form__inputGroup">
			<label for="login__passphrase">Passphrase</label>
			<input type="password" name="passphrase" id="login__passphrase" placeholder="Your secret passphrase" required>
		</div>
		<button type="submit">Log in</button>
	</form>
</main>

